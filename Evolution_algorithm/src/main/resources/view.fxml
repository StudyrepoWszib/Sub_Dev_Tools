<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.0" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ui.Controller">

    <top>
        <VBox spacing="10" padding="10">
            <Text text="Konfigurator Algorytmu Genetycznego" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <center>
        <GridPane hgap="10" vgap="10" padding="10">
            <Label text="Docelowy Objętość:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtTargetVolume" text="500000" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Rozmiar Populacji:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtPopulationSize" text="43" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Prawdopodobieństwo Mutacji:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="txtMutationRate" text="0.1" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Prawdopodobieństwo Krzyżowania:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="txtCrossoverRate" text="0.6" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Button fx:id="btnRunAlgorithm" text="Uruchom Algorytm" onAction="#runAlgorithm" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2"/>
        </GridPane>
    </center>

    <bottom>
        <TextArea fx:id="txtResults" editable="false" prefRowCount="10" wrapText="true" />
    </bottom>

    <right>
        <Pane fx:id="visualizationPane" prefWidth="300" style="-fx-border-color: black; -fx-border-width: 2;"/>
    </right>
</BorderPane>
